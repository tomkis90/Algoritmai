
///////////////////////////////////////////

void InsertionSort(int* A, int size){
    for(int i = 0; i < size; i++){
        int hole = i;
        int value = A[i];
        
        while(hole > 0 && A[hole-1] > value){
            A[hole] = A[hole-1];
            hole-=1;
        }
        
        A[hole] = value;
        
        
    }   }

////////////////////////////////////////

void SelectionSort (int* arr, int size){
    int temp;
    for(int i = 0; i < size-1; i++){
        for(int j = i+1; j < size; j++){
            if(arr[i] > arr[j]){
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

////////////////////////////////////////

// Binary Search

void FindElement (int* arr, int size, int element){
    int max,min,avg;
    min = 0;
    max = size-1;
    
    while(min <= max){
        avg=min+max / 2;
        
        if(arr[avg] == element){
            cout << avg << "  " <<arr[avg] << endl;
            break;
        }
        
        if(arr[avg] < element){
            min = avg+1;
        }
        if(arr[avg] > element){
            max = avg-1;
        }
    }
    
}

////////////////////////////////////////

//QUICKSORT (ARRAY[END] = Pivot)

int Part(int *arr, int start, int end){
    int pivot = arr[end];
    int partitionIndex = start;
    for(int i = start; i < end; i++){
        if (arr[i] <= pivot){
            swap(arr[i],arr[partitionIndex]);
            partitionIndex++;
        }
    }
    swap(arr[partitionIndex],arr[end]);
    return partitionIndex;
}

void sortarr(int *arr,int start,int end){
    if(start < end){
        int partitionIndex = Part(arr,start,end);
        sortarr(arr,start,partitionIndex-1);
        sortarr(arr,partitionIndex+1,end);
    }
    
}

////////////////////////////////////////////

//One function QuickSort. (usualy slower)

void quickSort(int* arr, int start, int end) {
      int i = start, j = end;
      int tmp;
      int pivot = arr[(start + end)/2];
 
      //partition
      // j - the end of an array  ||  i - the start of an array
      while (i <= j) {
            while (arr[i] < pivot)
                  i++;
            while (arr[j] > pivot)
                  j--;
            if (i <= j) {
                  swap(arr[i],arr[j]);
                  i++;
                  j--;
            }
      };
      // recursion
      if (start < j)
            quickSort(arr, start, j);
      if (i < end)
            quickSort(arr, i, end);
}

////////////////////////////////////////////

void largest (int* arr, int size){
    int biggest = arr[0];
    for(int i = 1; i < size; i++){
        if(arr[i] > biggest){
            biggest = arr[i];
        }
    }
    cout << biggest << endl;
    
}

////////////////////////////////////////

void smallest (int* arr, int size){
    int smallest = arr[0];
    for(int i = 1; i < size; i++){
        if(arr[i] < smallest){
            smallest = arr[i];
        }
    }
    cout << smallest << endl;
    
}

////////////////////////////////////////////

// Pushes the Value of your choice to the end of the array

void PushValueBack(int* Arr, int size, int value){
    int push;
    for(int i = 0; i < size; i++){
        if(Arr[i] == value){
            push = i;
            break;
        }
    }
    for(int i = push; i < size-1; i++){
        swap(Arr[i],Arr[i+1]);
    }
    
}
    
///////////////////////////////////////

// Pushes the Element of your choice to the end of the array
    
void PushElementBack(int* Arr, int size, int element){
        for(int i = element; i < size-1; i++){
            swap(Arr[i], Arr[i+1]);
    } 
    
}
    
///////////////////////////////////////
    
void ShirtLeft(int* Arr, int size){
    for(int i = 0; i < size-1; i++){
        Arr[i] = Arr[i+1];
    } 
}

/////////////////////////////////////
    
void ShiftRight(int* Arr, int size){
    for(int i = size-1; i!=0; i--){
        Arr[i] = Arr[i-1];
    } 
}

/////////////////////////////////////

void PrintChar(char* C){
    int i = 0;
    
    while(C[i] != '\0'){
        cout << C[i];
        i++;
    }
    cout << endl;
}

